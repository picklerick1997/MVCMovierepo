@model MvcMovie.Models.CreateMovieReviewViewModel

@{
    ViewData["Title"] = "Create Review";
}

<h1>Create Review</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label id="TitleLabel" asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" rows="6"  class="form-control"> </textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="form-group" style="width:150px">
                <label id="RatingLabel" asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
